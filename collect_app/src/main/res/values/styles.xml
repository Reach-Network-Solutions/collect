<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.Collect.TextView.Empty" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textSize">21sp</item>
    </style>

    <style name="Widget.Collect.TextView.WidgetAnswer" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/margin_standard</item>
        <item name="android:textAppearance">@style/TextAppearance.Collect.Body1</item>
        <item name="android:textColor">?colorOnSurface</item>
    </style>

    <style name="MaterialDialogSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/popup_show</item>
        <item name="android:windowExitAnimation">@anim/popup_hide</item>
    </style>

    <style name="Widget.Collect.BottomSheet.Modal" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">300dp</item>
    </style>

    <!--Nexus Forms Widget Styles-->
    <style name="Widget.NexusForms.MaterialButton.Primary" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Widget.NexusForms.MaterialButton.Primary.Answer" parent="Widget.NexusForms.MaterialButton.Primary">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Widget.NexusForms.MaterialRadioButton.Primary" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="useMaterialThemeColors">true</item>
    </style>

    <style name="Widget.NexusForms.MaterialCheckBox.Primary" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="useMaterialThemeColors">true</item>
    </style>

    <style name="Widget.NexusForms.TextInputLayout.OutlinedBox.Primary" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/outlined_stroke_color</item>
        <item name="endIconMode">custom</item>
    </style>


    <style name="Widget.NexusForms.ImageButton.MapButton" parent="Widget.MaterialComponents.Button">
        <item name="android:tintMode">src_in</item>
        <item name="android:tint">@color/map_button_state_color</item>
    </style>

    <style name="draw_text_prompt">
        <item name="android:textStyle">italic</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="draw_card_host">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">140dp</item>
    </style>

    <style name="Widget.NexusForms.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="rippleColor">@color/dark_blue</item>
    </style>

    <style name="Widget.NexusForms.TextView.Title" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Widget.NexusForms.TextView.Subtitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.NexusForms.Button.FilterButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:lineSpacingMultiplier">0</item>
        <item name="android:textSize">12sp</item>
        <item name="color">@color/filter_button_state_color</item>
    </style>

    <style name="Widget.NexusForms.TextView.Label" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.NexusForms.TextView.Value" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>