<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/recording_duration"
        style="@style/TextAppearance.Collect.Headline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_standard"
        android:textColor="?colorSecondary"
        tools:text="00:07" />

    <app.nexusforms.android.audio.Waveform
        android:id="@+id/waveform"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="@dimen/margin_small" />

    <RelativeLayout
        android:id="@+id/nexus_audio_wave_parent"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/border_for_widget_layout">

        <app.nexusforms.android.audio.NexusAudioWaveForm
            android:id="@+id/nexus_audion_waveform"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:paddingStart="10dp"
            android:paddingEnd="15dp" />

        <ImageButton
            android:id="@+id/play_or_record_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@color/zxing_transparent"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:src="@drawable/ic_baseline_mic_none_24" />

    </RelativeLayout>


    <app.nexusforms.android.audio.AudioControllerView
        android:id="@+id/audio_controller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>